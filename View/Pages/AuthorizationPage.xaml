<Page x:Class="BeautySalonWPF.View.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalonWPF.View.Pages"
      mc:Ignorable="d"  
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#4e444c"
      Title="AuthorizationPage">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="AuthoStackPanel">
            <TextBlock Foreground="#f6ebe7">Логин</TextBlock>
            <TextBox x:Name="LoginTextBox" TabIndex="0" >
            </TextBox>
            <TextBlock Foreground="#f6ebe7">Пароль</TextBlock>
            <PasswordBox x:Name="PasswordPasswordBox" TabIndex="1" ></PasswordBox>
            <Button x:Name="AuthButton" Click="AuthButtonClick" Margin="0, 20, 0, 0" Content="Войти" Background="#343855" Foreground="#c6b9d3"></Button>
            <Button x:Name="RegButton" Style="{StaticResource RegistrButton}" Click="RegButtonClick" TabIndex="3" IsTabStop="True" Foreground="#f6ebe7"></Button>
        </StackPanel>
    </Grid>
</Page>
