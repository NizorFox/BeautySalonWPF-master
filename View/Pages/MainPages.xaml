<Page x:Class="BeautySalonWPF.View.Pages.MainPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalonWPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="MainPages">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="image/beauty_logo.ico" HorizontalAlignment="Left" Margin="5"/>
        <TextBlock Text="Салон бархатные бровки" Margin="5" HorizontalAlignment="Center" FontSize="20"/>
        <Button x:Name="LogOutButton" Click="LogOutButtonClick" HorizontalAlignment="Right" Opacity="0.8" Visibility="Visible" Content="Выйти" Margin="0,0,10,0" Width="50" Height="40"></Button>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
